:root {
  --bg: #f6f8fe;
  --card: #ffffff;
  --primary: #0b66c3;
  --muted: #667280;
  --success: #106981;
}

* {
  box-sizing: border-box;
  font-family: Inter, system-ui, Segoe UI, Roboto, Arial;
}

body {
  background: var(--bg);
  margin: 0;
  padding: 28px;
  color: #0b1220;
}

.container {
  max-width: 850px;
  margin: 0 auto;
}

.header {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 18px;
}

.header h1 {
  margin: 0;
  font-size: 20px;
}

.title {
  color: var(--muted);
  font-size: 13px;
}

/* Card style */
.card {
  background: var(--card);
  padding: 18px;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(12, 18, 30, 0.06);
}

/* Controls */
.controls {
  display: flex;
  gap: 10px;
  margin-bottom: 14px;
  flex-wrap: wrap;
}

.controls input[type="text"] {
  flex: 1;
  min-width: 220px;
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid #ebeef8;
  font-size: 14px;
}

.controls button {
  padding: 10px 12px;
  border-radius: 8px;
  cursor: pointer;
  border: none;
}

button.primary {
  background: var(--primary);
  color: white;
}

button.secondary {
  background: #f1f5f9;
  color: #0b1220;
  border: 1px solid #e6eef8;
}

/* Task item */
.task {
  margin-top: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #eef2ff;
  margin-bottom: 8px;
  background: linear-gradient(180deg, #fff, #fbfdff);
}

.task .details {
  display: flex;
  gap: 12px;
  align-items: center;
  flex: 1;
}

.task label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
}

.task .title {
  font-size: 15px;
}

.task .title.completed {
  text-decoration: line-through;
  color: var(--muted);
}

.task .date {
  font-size: 12px;
  color: var(--muted);
}
